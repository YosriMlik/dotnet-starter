{
  "$schema": "http://json.schemastore.org/template",
  "author": "Your Name",
  "classifications": ["Web", "WebAPI", "API"],
  "identity": "WebAPI.FeatureSlice",
  "name": "Web API with Feature Slices",
  "shortName": "webapi-features",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "webapi",
  "preferNameDirectory": true,
  "symbols": {
    "Framework": {
      "type": "parameter",
      "description": "The target framework for the project.",
      "datatype": "choice",
      "choices": [
        {
          "choice": "net8.0",
          "description": "Target net8.0"
        }
      ],
      "replaces": "net8.0",
      "defaultValue": "net8.0"
    },
    "EnableDatabase": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "description": "Include SQLite database setup"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "condition": "(!EnableDatabase)",
          "exclude": [
            "src/Shared/Database/**/*"
          ]
        }
      ],
      "exclude": [
        ".vscode/**/*",
        ".vs/**/*",
        ".idea/**/*",
        "bin/**/*",
        "obj/**/*",
        "nupkg/**/*",
        "*.db",
        "*.db-shm",
        "*.db-wal",
        "*.user",
        ".template.config/**/*",
        "templatepack.csproj",
        "install-template.*",
        "test-template.*",
        "*_README.md",
        "*_GUIDE.md",
        "*_SETUP.md",
        "CHECKLIST.md",
        "PUBLISH_GUIDE.md",
        "GITHUB_SETUP.md",
        "TEMPLATE_README.md",
        ".git/**/*",
        ".github/**/*",
        "Migrations/**/*"
      ]
    }
  ]
}
